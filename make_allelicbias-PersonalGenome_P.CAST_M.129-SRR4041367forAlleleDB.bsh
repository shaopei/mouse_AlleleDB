## use all SeqPrepMerged reads and R1 reads, fastx_reverse_complement them and gzip
zcat  SRR4041367_SeqPrepMerged_dedup.fastq.gz SRR4041367_dedup_1.fastq.gz | fastx_reverse_complement -Q33 |gzip > ../SRR4041367_forAlleleDB.fastq.gz

## select R2 reads and fastx_reverse_complement
# only keep R2 at paired end bam file SRR4041367_NotMerged.sort.bam
# only keep R2 that is NOT overlapped with R1 at all, then convert to reverse_complement fastq.gz
cd ..
samtools view -f 0x2 SRR4041367_NotMerged.sort.bam | awk 'BEGIN{OFS="\t"} {print $1,$10,$11,$4,$3,$6,$7,$8,$9,length($10)}' |paste - - | \
awk 'BEGIN{OFS="\t"} ($14-$18 >= $10) {print "@"$11"_2\n"$12"\n+"$11"_2\n"$13}; ($18-$14 >= $20) {print "@"$11"_2\n"$12"\n+"$11"_2\n"$13}' |gzip >> SRR4041367_forAlleleDB.fastq.gz

